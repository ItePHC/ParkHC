package day0619;

import java.util.Scanner;

public class QuizOper_13 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		/*
		 * 이름입력 : 강호동 
		 * 키 : 177.5
		 * 몸무계 : 88 
		 * 
		 * ====================
		 * [BMI 정보]
		 * 이름 : 강호동
		 * 키 : 177.5cm
		 * 몸무계 : 88kg
		 * 
		 * 
		 * 표준 몸무계 : (키 - 100)*0.9kg
		 * 권장 표준 몸무계는 69.75kg입니다
		 */
		
		String name;
		int ki, weight;
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("이름 입력 : ");
		name = sc.nextLine();
		System.out.println("키 입력 : ");
		ki = sc.nextInt();
		System.out.println("몸무계 입력 : ");
		weight = sc.nextInt();
		
		double avgweight, ;
		
		avgweight = (ki - 100) * 0.9;
		System.out.println("[BMI 정보]");
		System.out.println("이름 : " + name);
		System.out.println("키 : " + ki + "cm");
		System.out.println("몸무계 : " + weight + "kg");
		System.out.println("표준몸무계는 " + BMI + "kg 입니다");
		
		
		
	
	}

}
