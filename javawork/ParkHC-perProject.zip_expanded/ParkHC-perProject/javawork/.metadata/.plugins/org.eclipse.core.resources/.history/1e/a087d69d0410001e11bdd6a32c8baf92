		System.out.println("점수를 입력해주세요 : (종료를 원하시면 Q를 입력해주세요.)");
		input = sc.nextInt();
		
		input = Integer.parseInt(word);
		word.equalsIgnoreCase("q");
		if(input =)
			break;
		
		tot += input;
		cnt++;
			
		}
		
		
		
		
	}

